@model ComputerShop.Models.Product

<!DOCTYPE html>

<html>
<head>
	@Styles.Render("~/Content/InputForm.css")
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    	<div class="jumbotron text-center">
    		<h3>Are you sure you want to delete this?</h3>
    
    		<h3>Product</h3>
        
    		<table class="table table-bordered">
    			<tbody>
    				
    				<tr>
    					<td>
    						<strong>@Html.DisplayNameFor(model => model.Id)</strong>
    					</td>
    					<td>
    						@Html.DisplayFor(model => model.Id)
    					</td>
    				</tr>
                    <tr>
                        <td>
                            <strong>@Html.DisplayNameFor(model => model.ProductName)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ProductName)
                        </td>
                    </tr>
    				<tr>
    					<td>
    						<strong>@Html.DisplayNameFor(model => model.ProductType)</strong>
    					</td>
    					<td>
    						@Html.DisplayFor(model => model.ProductType)
    					</td>
    				</tr>
                    <tr>
                        <td>
                            <strong>@Html.DisplayNameFor(model => model.Price)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Price)
                        </td>
                    </tr>
    				<tr>
    					<td>
    						<strong>@Html.DisplayNameFor(model => model.ProductionDate)</strong>
    					</td>
    					<td>
    						@Html.DisplayFor(model => model.ProductionDate)
    					</td>
    				</tr>
    				
    			</tbody>
    		</table>
    
    		@using (Html.BeginForm()) {
    			@Html.AntiForgeryToken()
    
    			<div class="form-actions no-color">
    				<input type="submit" value="Delete" class="btn btn-default" /> |
    				@Html.ActionLink("Back to List", "Index")
    			</div>
    		}
    	</div>
    		
	
</body>
</html>
