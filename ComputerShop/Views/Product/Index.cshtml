@model IEnumerable<ComputerShop.Models.Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="jumbotron text-center">
    @if (User.IsInRole("Admin"))
    {
        <p class="text-left">
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    @if (Model.Count() == 0)
    {
        <p class="text-center">No products available now.</p>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductionDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                       
                        @Html.DisplayFor(modelItem => item.ProductionDate, "ShortDate.cshtml", item.ProductionDate)
                    </td>

                    <td>
                        @{Html.RenderPartial("_ProductOptions", item);}
                    </td>
                </tr>
             }

        </table>
    }
    
    
    </div>
</body>
</html>
