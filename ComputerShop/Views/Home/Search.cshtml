@using ComputerShop.Models
@{
    ViewBag.Title = "Search";

}
@model List<Product>


<div class="jumbotron">
    @if(Model.Count == 0)
    {
        <p class="text-center">Cannot find product with phrase "@ViewBag.Phrase"</p>
    }
    else
    {
        <div class="container text-center">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Type</th>
                        <th>Production Date</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.idProduct</th>
                            <th>@item.product_type</th>
                            <th>@item.production_date.ToShortDateString()</th>
                            <th></th>
                            <th></th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

                        

