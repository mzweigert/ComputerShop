@model IEnumerable<ComputerShop.Models.Basket>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="jumbotron text-center">
    @if (Model.Count() == 0)
    {
        <p class="text-center">No purchases available now.</p>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { PurchaseId = item.PurchaseId, ProductId = item.ProductId }) |
                        @Html.ActionLink("Details", "Details", new { PurchaseId = item.PurchaseId, ProductId = item.ProductId }) |
                        @Html.ActionLink("Delete", "Delete", new { PurchaseId = item.PurchaseId, ProductId = item.ProductId })
                    </td>
                </tr>
            }

        </table>
    }
    
    </div>
</body>
</html>
